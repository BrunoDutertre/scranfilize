#!/bin/sh
debug=no
while [ $# -gt 0 ]
do
  case $1 in
    -h) echo "usage: configure [ -g ]"; exit 0;;
    -g) debug=yes;;
    -*) echo "configure: error: invalid option '$1' (try '-h')"; exit 1;;
  esac
  shift
done
COMPILE="gcc -Wall"
if [ $debug = yes ]
then
  COMPILE="$COMPILE -g3"
else
  COMPILE="$COMPILE -O3 -DNDEBUG"
fi
echo "$COMPILE"
rm -f makefile
sed -e "s,@COMPILE@,$COMPILE," makefile.in > makefile
